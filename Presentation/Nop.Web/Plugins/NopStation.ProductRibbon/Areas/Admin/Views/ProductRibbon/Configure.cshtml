@model ConfigurationModel

@{
    Layout = "_AdminLayout";
    Html.SetActiveMenuItemSystemName("ProductRibbon.Configuration");

    ViewBag.Title = T("NopStation.ProductRibbon.Configuration").Text;
}

<form asp-controller="ProductRibbon" asp-action="Configure" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("NopStation.ProductRibbon.Configuration")
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>
    
    <div class="content">
        <div class="form-horizontal">
            @await Component.InvokeAsync("StoreScopeConfiguration")
            <div asp-validation-summary="All"></div>
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-md-4">
                                <nop-override-store-checkbox asp-for="ProductDetailsPageWidgetZone_OverrideForStore" asp-input="ProductDetailsPageWidgetZone" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="ProductDetailsPageWidgetZone" />
                            </div>
                            <div class="col-md-8">
                                <nop-editor asp-for="ProductDetailsPageWidgetZone" />
                                <span asp-validation-for="ProductDetailsPageWidgetZone"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4">
                                <nop-override-store-checkbox asp-for="ProductOverviewBoxWidgetZone_OverrideForStore" asp-input="ProductOverviewBoxWidgetZone" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="ProductOverviewBoxWidgetZone" />
                            </div>
                            <div class="col-md-8">
                                <nop-editor asp-for="ProductOverviewBoxWidgetZone" />
                                <span asp-validation-for="ProductOverviewBoxWidgetZone"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4">
                                <nop-override-store-checkbox asp-for="EnableNewRibbon_OverrideForStore" asp-input="EnableNewRibbon" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="EnableNewRibbon" />
                            </div>
                            <div class="col-md-8">
                                <nop-editor asp-for="EnableNewRibbon" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4">
                                <nop-override-store-checkbox asp-for="EnableDiscountRibbon_OverrideForStore" asp-input="EnableDiscountRibbon" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="EnableDiscountRibbon" />
                            </div>
                            <div class="col-md-8">
                                <nop-editor asp-for="EnableDiscountRibbon" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4">
                                <nop-override-store-checkbox asp-for="EnableBestSellerRibbon_OverrideForStore" asp-input="EnableBestSellerRibbon" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="EnableBestSellerRibbon" />
                            </div>
                            <div class="col-md-8">
                                <nop-editor asp-for="EnableBestSellerRibbon" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
