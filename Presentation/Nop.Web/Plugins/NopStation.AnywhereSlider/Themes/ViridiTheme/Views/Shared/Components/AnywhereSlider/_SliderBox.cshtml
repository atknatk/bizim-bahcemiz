@model SliderModel

@if (Model.Items.Count > 0)
{
    <div class="anywhere-slider-container">
        @if (!string.IsNullOrEmpty(Model.BackGroundPictureUrl))
        {
            <div class="row mb-2 mb-sm-5 homepagePromotionSlider" style="background:url('@Model.BackGroundPictureUrl')no-repeat center; background-size: cover;">
                <div class="container">
                    <div class="homepage-promotion owl-carousel anywhere-slider-2 slider-2 owl-loaded owl-drag slider-@(Model.Id)" id="nopstation-slider-@Model.Id">
                        @foreach (var sliderItemModel in Model.Items)
                        {
                            <div class="anywhere-slider-item">
                                <div class="row align-items-center">
                                    <div class="col-md-6">
                                        <a href="@sliderItemModel.Link" title="@sliderItemModel.Title">
                                            <img alt="@sliderItemModel.ImageAltText" src="@sliderItemModel.PictureUrl" title="" />
                                        </a>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="promotion-carousel-caption">
                                            <h2 class="slider-title">@sliderItemModel.Title</h2>
                                            <p class="slider-subtitle">@sliderItemModel.ShortDescription</p>
                                            <a href="@sliderItemModel.Link" class="slider-btn shopbutton">@T("NopStation.AnywhereSlider.ShopNow")</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="owl-carousel anywhere-slider-1 slider-@(Model.Id)" id="nopstation-slider-@Model.Id">
                @foreach (var sliderItemModel in Model.Items)
                {
                    <div class="anywhere-slider-item">
                        <div class="single-slide-content">
                            <div class="picture">
                                <a href="@sliderItemModel.Link" title="@sliderItemModel.Title">
                                    <img alt="@sliderItemModel.ImageAltText" src="@sliderItemModel.PictureUrl" title="" />
                                </a>
                            </div>
                            <div class="slider-caption">
                                <h2 class="slider-title">@sliderItemModel.Title</h2>
                                <h3 class="slider-subtitle">@sliderItemModel.ShortDescription</h3>
                                <a href="@sliderItemModel.Link" class="slider-btn">@T("NopStation.AnywhereSlider.ShopNow")</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <script asp-location="Footer">
        $(document).ready(function () {
            $('#nopstation-slider-@Model.Id').owlCarousel({
                nav: @Model.Nav.ToString().ToLower(),
                loop: @Model.Loop.ToString().ToLower(),
                dots: true,
                margin: @Model.Margin,
                autoplay: @Model.AutoPlay.ToString().ToLower(),
                rtl: @Model.RTL.ToString().ToLower(),
                autoplayTimeout: @Model.AutoPlayTimeout,
                autoplayHoverPause: @Model.AutoPlayHoverPause.ToString().ToLower(),
                lazyLoad: @Model.LazyLoad.ToString().ToLower(),
                lazyLoadEager: @Model.LazyLoadEager,
                startPosition: @Model.StartPosition,
                animateOut: '@Model.AnimateOut',
                animateIn: '@Model.AnimateIn',
                responsive: {
                    0: {
                        items: 1
                    }
                }
            });
        });
    </script>
}