@model IEnumerable<PluginInfoModel>

@{
    Layout = "_AdminLayout";

    //page title
    ViewBag.Title = T("NopStation.Core.PluginInfo").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("NopStationCore.PluginInfo");
}

<div class="content-header clearfix">
    <h1 class="pull-left">
        @T("NopStation.Core.PluginInfo")
    </h1>
</div>

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    @foreach (var item in Model)
                    {
                        <span>@item.Name, Version=@(item.Version) (@item.FileName)</span><br />
                    }
                </div>
            </div>
        </div>
    </div>
</div>
