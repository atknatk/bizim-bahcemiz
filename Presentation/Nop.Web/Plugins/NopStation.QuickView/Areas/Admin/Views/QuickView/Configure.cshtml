@model ConfigurationModel
@using Nop.Plugin.NopStation.QuickView.Areas.Admin.Models

@{
    Layout = "_AdminLayout";
    Html.SetActiveMenuItemSystemName("QuickView.Configuration");

    ViewBag.Title = T("NopStation.QuickView.Configuration").Text;
}

<form asp-controller="QuickView" asp-action="Configure" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("NopStation.QuickView.Configuration")
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>
    
    <div class="content">
        <div class="form-horizontal">
            @await Component.InvokeAsync("StoreScopeConfiguration")
            <div asp-validation-summary="All"></div>
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-md-4">
                                <nop-override-store-checkbox asp-for="ShowAlsoPurchasedProducts_OverrideForStore" asp-input="ShowAlsoPurchasedProducts" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="ShowAlsoPurchasedProducts" />
                            </div>
                            <div class="col-md-8">
                                <nop-editor asp-for="ShowAlsoPurchasedProducts" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4">
                                <nop-override-store-checkbox asp-for="ShowRelatedProducts_OverrideForStore" asp-input="ShowRelatedProducts" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="ShowRelatedProducts" />
                            </div>
                            <div class="col-md-8">
                                <nop-editor asp-for="ShowRelatedProducts" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4">
                                <nop-override-store-checkbox asp-for="ButtonContainerName_OverrideForStore" asp-input="ButtonContainerName" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="ButtonContainerName" />
                            </div>
                            <div class="col-md-8">
                                <nop-editor asp-for="ButtonContainerName" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
