@model ProductDetailsModel.GiftCardModel
@using Nop.Web.Models.Catalog;
@using Nop.Web.Framework;
@if (Model.IsGiftCard)
{
    <div class="bs-giftcard">
        <div class="form-group">
            <div>
                @Html.TextBoxFor(model => model.RecipientName, new { @class = "recipient-name form-control", @placeholder = Html.DisplayNameFor(model => model.RecipientName) })
            </div>
        </div>
        @if (Model.GiftCardType == Nop.Core.Domain.Catalog.GiftCardType.Virtual)
        {
            <div class="form-group">
                <div class="">
                    @Html.TextBoxFor(model => model.RecipientEmail, new { @class = "recipient-email form-control", @placeholder = Html.DisplayNameFor(model => model.RecipientEmail) })
                </div>
            </div>
        }
        <div class="form-group">
                <div class="">
                    @Html.TextBoxFor(model => model.SenderName, new { @class = "sender-name form-control", @placeholder = Html.DisplayNameFor(model => model.SenderName) })
                </div>
            </div>
        @if (Model.GiftCardType == Nop.Core.Domain.Catalog.GiftCardType.Virtual)
        {
            <div class="form-group">
                <div class="">
                    @Html.TextBoxFor(model => model.SenderEmail, new { @class = "sender-email form-control", @placeholder = Html.DisplayNameFor(model => model.SenderEmail) })
                </div>
            </div>
        }
        <div class="form-group">
                <div class="">
                    @Html.TextAreaFor(model => model.Message, new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.Message) })
                </div>
            </div>
    </div>
}