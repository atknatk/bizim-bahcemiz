@using Nop.Core
@using Nop.Services.Helpers
@using Nop.Web.Framework.UI
@inject IWorkContext workContext
@inject IThemeContext themeContext
@inject IUserAgentHelper userAgentHelper
@{
    var supportRtl = workContext.WorkingLanguage.Rtl;
    var themeName = themeContext.WorkingThemeName;

    //add main CSS file
    if (supportRtl)
    {
        Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/rtl/responsive.css");
        Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/styles.rtl.css");
        Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/rtl/zoomple.css");
        Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/rtl/owl.theme.green.min.css");
        Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/rtl/owl.carousel.css");
        Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/bootstrap.min.rtl.css");
        Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/bootstrap.min.css");
        //font-awsome 5 css
        Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/rtl/all.min.css");
        Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/rtl/animate.css");
        Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/all-fonts.css");
    }
    else
    {
        Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/responsive.css");
        Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/styles.css");
        Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/all-fonts.css");
    }

    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/zoomple.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/owl.theme.green.min.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/owl.carousel.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/bootstrap.min.css");
    //font-awsome 5 css
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/all.min.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/animate.css");
    //Html.AppendCssFileParts($"https://fonts.googleapis.com/css?family=Barlow:300,400,500,700");
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Barlow:300,400,500,700">
    //add jQuery UI css file
    Html.AppendCssFileParts("~/lib/jquery-ui/jquery-ui-1.12.1.custom/jquery-ui.min.css");
}